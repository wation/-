/* pages/me/me.wxss */

.item {
    /* 列表项 */
    background-color: lightgray;
    margin-top: 10rpx;
    padding: 10rpx 20rpx 10rpx 20rpx;
    font-size: 32rpx;
}

.vObject {
    margin-top: 0;
    height: 200rpx;
    width: 100%;
}

.objectImg {
    height: 200rpx;
    width: 200rpx;
    line-height: 200rpx;
}

.rawPrice {
    margin-top: 120rpx;
}
.objectDesc {
    height: 100%;
    display: inline-block;
    margin-left: 20rpx;
}

.objectPrice {
    display: inline;
    margin-left: 80rpx;
    font-size:50rpx;
    color:crimson;
}

.title {
    line-height: 100rpx;
}

.values {
    float: right;
}

.friendImgs {
    display: inline;
}

.vPay {
    padding-top: 0;
    padding-bottom: 0;
    padding-right: 0;
    bottom: 0;
    position: absolute;
    width: 100%;
}

.titlePay {
    height: 100rpx;
    line-height: 100rpx;
    align-items: center; /*垂直居中*/
    justify-content: center;
}

.pay {
    display: inline;
    line-height: 100rpx;
    float: right;
    background-color: salmon;
    position: relative;
    right: 20rpx;
    border-radius: 0px;
    border: none;
}
