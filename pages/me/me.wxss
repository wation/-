/* pages/me/me.wxss */
/**index.wxss**/

.user-head {
  background:#fff;
  height:250px;
  position: relative;
  display:-webkit-flex;
	display:flex;
	width:100%;
  justify-content:center;
  align-content:center;
}
.user-head .center{
    display: flex;
    flex-flow: column;
    padding-top: 50px;
}
.user-img{
  width:100px;
  height: 100px;
}

.user-img image {
  width:80px;
  height: 80px;
  border-radius: 50%;
  border:10px solid #f4f5e5;
}
.user-text{
  text-align:center;
  width:100%;
}
.user-text text{
  font-family: 微软雅黑;
  color:#333;
  display: block;
  font-size: 40rpx;
  margin-top: 30rpx;
}


.list {
  background: #fff;
  margin-top:50rpx;
}
.list .item{
  padding:20px 15px;
  font-size: 14px;
  color:#333;
  position: relative;
  border-bottom: 1px solid #f3f3f3;
}
.list .item::last-child{
  border:none;
}
.list .item image {
  width:16px;
  height: 16px;
  display: inline-block;
  vertical-align:middle;
  margin-right:5px;
}
.list .item .jump{
  position: absolute;
  right:20px;
  color:#999;
}

.item {
    /* 列表项 */
    background-color: lightgray;
    margin-top: 10rpx;
    padding: 10rpx 20rpx 10rpx 20rpx;
    font-size: 32rpx;
}

.vObject {
    margin-top: 0;
    height: 200rpx;
    width: 100%;
}

.objectImg {
    height: 200rpx;
    width: 200rpx;
    line-height: 200rpx;
}

.rawPrice {
    margin-top: 120rpx;
}
.objectDesc {
    height: 100%;
    display: inline-block;
    margin-left: 20rpx;
}

.objectPrice {
    display: inline;
    margin-left: 80rpx;
    font-size:50rpx;
    color:crimson;
}

.title {
    line-height: 100rpx;
}

.values {
    float: right;
}

.friendImgs {
    display: inline;
}

.vPay {
    padding-top: 0;
    padding-bottom: 0;
    padding-right: 0;
    bottom: 0;
    position: absolute;
    width: 100%;
}

.titlePay {
    height: 100rpx;
    line-height: 100rpx;
    align-items: center; /*垂直居中*/
    justify-content: center;
}

.pay {
    display: inline;
    line-height: 100rpx;
    float: right;
    background-color: salmon;
    position: relative;
    right: 20rpx;
    border-radius: 0px;
    border: none;
}
