/**index.wxss**/

.b-shadow {
    box-shadow: 1px 1px 1px #888;
}

.card {
    width: 95%;
    background-color: #fff;
    margin: auto auto 0;
    border-radius: 20rpx;
}

.desc {
    color: #999;
    line-height: 80rpx;
    margin: 0 15rpx 0 15rpx;
}

.card-content image {
    width: 100%;
    height: 300rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

.share image {
    width: 42rpx;
    height: 42rpx;
    display: inline-block;
    margin: 10rpx 0 0 0;
}

.desc2 {
    width: 95%;
    margin: auto auto 10rpx 0;
    padding-bottom: 15rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    display: inline-flex;
    position: relative;
}

.desc2_text {
    width: 64%;
    font-size: 24rpx;
    text-align: bottom;
    line-height: 40rpx;
    margin-top: 40rpx;
}

.desc2_button {
    width: 36%;
    display: inline-block;
     height: 64rpx;
     line-height: 64rpx;
     position: absolute;
     right: 0rpx;
     bottom: 0rpx;
}

.modal {
    color: cornflowerblue;
    font-size: 30rpx;
}

.modal text {
    margin-top: 30px;
    font-size: 26rpx;
}

.input {
    width: 100%;
    padding: 25rpx 25rpx 25rpx 25rpx;
    height: 80px;
}

.inputView {
    border: 1px solid #999;
    border-radius: 3px;
    margin-top: 2px;
}

.placeholder {
    margin: 25rpx 25rpx 25rpx 25rpx;
    color: thistle;
    font-size: 26rpx;
}
#shareBtn {
    padding: 0 0 4 0;
    margin: 0;
    width: 60%;
    display: inline-block;
    float: right;
    background-color: #fff;
    color: #999;
    text-align: right;
    font-size: 32rpx;
}

#shareBtn::after {
    border: none !important;
}

button[type="primary"] {
    color: #fff;
    background-color: #20b3ad;
    font-size: 26rpx;
    margin-top: 10rpx;
}
