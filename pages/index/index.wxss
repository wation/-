/**index.wxss**/
.b-shadow {
box-shadow: 2px 2px 2px #888888;
}
.card {
  width: 95%;
  background-color: #fff;
  margin: auto auto 0;
  border-radius: 20rpx;
}

.carDesc {
  color: #999;
  line-height: 80rpx;
  margin: 0 15rpx 0 15rpx;
}

.card-content image {
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.share image {
  width: 42rpx;
  height: 42rpx;
  display: inline-block;
  margin: 10rpx 0 0 0;
}

.carDesc2 text {
  font-size: 24rpx;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.carDesc2 button {
  width: 36%;
  display: inline-block;
  height: 64rpx;
  float: right;
  line-height: 64rpx;
}

#shareBtn {
  padding: 0 0 4 0;
  margin: 0;
  width: 60%;
  display: inline-block;
  height: 80rpx;
  float: right;
  line-height: 80rpx;
  background-color: #fff;
  color: #999;
  text-align: right;
  font-size: 32rpx;
}

#shareBtn::after {
  border: none !important;
}

button[type="primary"] {
  color: #fff;
  background-color: #20b3ad;
  font-size: 26rpx;
  margin-top: 10rpx;
}
